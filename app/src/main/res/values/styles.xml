<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
//activity_main.xml
    //LinearLayout content image and text
    <style name="Blokk" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

//activity.xml picture text
    <style name="Image_text" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
    </style>

    //list_item.xml
    //list_item.xml Icon
    <style name="Icon" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //list_item.xml textView
    <style name="list_item_TextView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    //music_list.xml
    //music_list.xml ListView
    <style name="music_list_ListView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    //music_list.xml player LinearLayout
    <style name="music_list_player_layout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    //music_list.xml player SeekBar Text(min-max) LinearLayout
    <style name="music_list_player_seekbar_text_layout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    //music_list.xml player SeekBar min TextView
    <style name="music_list_seekbar_min_textView" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    //music_list.xml player SeekBar max TextView
    <style name="music_list_seekbar_max_textView" parent="music_list_seekbar_min_textView">
        <item name="android:gravity">right</item>
    </style>

    //music_list.xml player SeekBar
    <style name="music_list_player_seekbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:max">200</item>
        <item name="android:progress">0</item>
    </style>

    //music_list.xml player Buttons LinearLayout
    <style name="music_list_player_buttons_layout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    //music_list.xml player buttons ImageButton
    <style name="music_list_imageButton" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    //music_list.xml player back_button layout
    <style name="music_list_backButon_layout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>
